<Window x:Class="WpfApp9.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Учебная литература" Height="400" Width="600">

    <Grid>
        <ListBox x:Name="listBoxBooks" Margin="10" />
        <!-- Список для отображения книг -->

        <TextBox x:Name="textBoxPublisher" Margin="10,0,10,40" VerticalAlignment="Bottom" Height="30" />
        <!-- Поле для ввода издательства -->

        <Button Content="Вывести книги" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="100" Click="ShowBooks_Click"/>
        <!-- Кнопка для вывода книг -->

        <Button Content="Выход" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="75" Click="ExitButton_Click"/>
        <!-- Кнопка выхода -->

        <Button Content="О программе" HorizontalAlignment="Center" VerticalAlignment="Bottom" Width="100" Click="AboutButton_Click"/>
        <!-- Кнопка о программе -->
    </Grid>
</Window>
